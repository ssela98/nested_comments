<%= form_with(model: comment) do |form| %>
  <%= hidden_field_tag :post_id, post.id %>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.submit %>
    <%= link_to "Cancel", comment_path(comment, post_id: post.id) if comment.persisted? %>
  </div>
<% end %>
